@model Lab2.ViewModels.LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<h2 class="text-center mb-4">Login</h2>

		<form asp-controller="Account" asp-action="Login" method="post">
			<div class="mb-3">
				<label asp-for="Email" class="form-label">Email</label>
				<input asp-for="Email" class="form-control" type="email" placeholder="Enter email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label">Password</label>
				<input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="d-grid gap-2">
				<button type="submit" class="btn btn-primary">Log in</button>
			</div>
		</form>

		<hr class="my-4" />

		<div class="text-center">
			<p>Don't have an account?</p>
			<a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary">Register</a>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
