@using Lab2.Extensions
@model Lab2.ViewModels.RoomManageViewModel
@{
    ViewData["Title"] = "Room management";
    var isAdmin = User.IsAdmin();
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Room management</h2>

        @if (isAdmin)
        {
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#initModal">
                <i class="bi bi-database-add"></i> Database initialization
            </button>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add new room</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Room" asp-action="AddRoom" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Smerfetka" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="np. 20" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add room
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Lista sal (@Model.Rooms.Count())</h5>
                </div>
                <div class="card-body">
                    @if (Model.Rooms.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Capacity</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var index = 1;
                                    }
                                    @foreach (var room in Model.Rooms)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@room.Name</td>
                                            <td>
                                                <span class="badge bg-info">@room.Capacity people</span>
                                            </td>
                                            <td class="text-end">
                                                <form asp-controller="Room" asp-action="DeleteRoom" method="post" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to remove room @room.Name?');">
                                                    <input type="hidden" name="id" value="@room.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Remove
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
							<i class="bi bi-info-circle"></i> No rooms in the system. Add the first room using the form on the left side.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="initModal" tabindex="-1" aria-labelledby="initModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="initModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Database initialization
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to initialize the database with sample data?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-warning" id="confirmInitBtn">
                    Confirm
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $('#confirmInitBtn').on('click', function() {
                const btn = $(this);
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Inicjalizacja...');

                $.ajax({
                    url: '@Url.Action("Init", "Home")?confirm=yes-i-am-sure',
                    type: 'GET',
                    success: function() {
                        location.reload();
                    },
                    error: function() {
                        location.reload();
                    }
                });
            });
        });
    </script>
}
