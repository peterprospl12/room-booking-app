@using Lab2.Extensions
@model Lab2.ViewModels.RoomManageViewModel
@{
    ViewData["Title"] = "Zarządzanie salami";
    var isAdmin = User.IsAdmin();
}

<div class="container">
    <h2 class="mb-4">Zarządzanie salami</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Formularz dodawania nowej sali -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Dodaj nową salę</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Room" asp-action="AddRoom" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="np. Sala konferencyjna A" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="np. 20" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Dodaj salę
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Lista istniejących sal -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Lista sal (@Model.Rooms.Count())</h5>
                </div>
                <div class="card-body">
                    @if (Model.Rooms.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nazwa</th>
                                        <th>Pojemność</th>
                                        <th class="text-end">Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var index = 1;
                                    }
                                    @foreach (var room in Model.Rooms)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@room.Name</td>
                                            <td>
                                                <span class="badge bg-info">@room.Capacity osób</span>
                                            </td>
                                            <td class="text-end">
                                                <form asp-controller="Room" asp-action="DeleteRoom" method="post" class="d-inline"
                                                      onsubmit="return confirm('Czy na pewno chcesz usunąć salę @room.Name?');">
                                                    <input type="hidden" name="id" value="@room.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Usuń
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> Brak sal w systemie. Dodaj pierwszą salę używając formularza po lewej stronie.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}